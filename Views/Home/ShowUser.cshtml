@model WebApplication3.Models.User

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ShowUser</title>
</head>
<body>
    <div class="item">
        @Html.Label("Id")
        @Html.Display("Id")
    </div>
    <div class="item">
        @Html.LabelFor(m => m.Surname)
        @Html.Display("Surname")
    </div>
    <div class="item">
        @Html.LabelFor(m => m.BirthDate)
        @Html.DisplayFor(m => m.BirthDate)
    </div>
    <div class="item">
        @Html.LabelFor(m => m.Address.Line1)
        @Html.DisplayFor(m => m.Address.Line1)
    </div>
    <div class="item">
        @Html.LabelFor(m => m.Address.Country)
        @Html.DisplayFor(m => m.Address.Country)
    </div>
    <div class="item">
        @Html.LabelFor(m => m.Address.PostalCode)
        @Html.DisplayFor(m => m.Address.PostalCode)
    </div>
    <div class="item">
        @Html.LabelFor(m => m.IsMarried)
        @Html.CheckBoxFor(m => m.IsMarried)
    </div>
    <div class="item">
        @Html.LabelFor(m => m.Role)
        @Html.DisplayFor(m => m.Role)
    </div>
</body>
</html>
